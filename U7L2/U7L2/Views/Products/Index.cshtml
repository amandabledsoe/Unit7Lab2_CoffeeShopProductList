@model U7L2.Models.ProductsList

@{
    ViewData["Title"] = "Product List";
}

<h1>Product List</h1>

@{
<table width="100%" class="table-bordered text-center">
    <thead>
        <tr class="text-info" style="background-color:black">
            <td>PRODUCT ID</td>
            <td>PRODUCT NAME</td>
            <td>PRODUCT PRICE</td>
        </tr>
    </thead>
    <tbody>
    @foreach (var product in @Model.ProductList)
    {
        if (product.ID % 2 != 0)
        {
            <tr style="background-color:lightgray">
                <td>@product.ID</td>
                <td><a href="Products/Details?ID=@product.ID">@product.Name.ToUpper()</a></td>
                <td>$@product.Price</td>
            </tr>
        }
        else
        {
            <tr>
                <td>@product.ID</td>
                <td><a href="Products/Details?ID=@product.ID">@product.Name.ToUpper()</a></td>
                <td>$@product.Price</td>
            </tr>        
        }
    }
    </tbody>
</table>
}